<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".TestUI">


        <TextView
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chế độ hiển thị"
            android:paddingLeft="6dp"
            android:textColor="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_marginLeft="10dp"
                android:id="@+id/radioGroup1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RadioButton
                    android:padding="10dp"
                    android:text="Sáng (Light-Mode)"
                    android:id="@+id/RDBSang"
                    android:gravity="center"
                    android:button="@drawable/custom_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    android:textColor="@color/black"
                    />

                <RadioButton
                    android:padding="10dp"
                    android:text="Tối (Dark-Mode)"
                    android:id="@+id/RDBToi"
                    android:gravity="center"
                    android:button="@drawable/custom_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    android:textColor="@color/black"
                    />

            </RadioGroup>

        </LinearLayout>



    <TextView
        android:textSize="24dp"
        android:paddingLeft="6dp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giao diện mặc định khi khởi động"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="14dp"
        android:text="Mặc định hiển thị sau khi khởi động"
        android:paddingLeft="6dp"/>
    <ScrollView
        android:fillViewport="true"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        >
        <GridLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_marginLeft="10dp"
                    android:id="@+id/radioGroup2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:padding="10dp"
                        android:text="Mặc định"
                        android:id="@+id/RDB_MD"
                        android:gravity="center"
                        android:button="@drawable/custom_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:textColor="@color/black"
                        />

                    <RadioButton
                        android:padding="10dp"
                        android:text="FT 360"
                        android:id="@+id/RDB_FT360"
                        android:gravity="center"
                        android:button="@drawable/custom_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:textColor="@color/black"
                        />

                    <RadioButton
                        android:padding="10dp"
                        android:text="BTS 360"
                        android:id="@+id/RDB_BTS360"
                        android:gravity="center"
                        android:button="@drawable/custom_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:textColor="@color/black"
                        />
                    <RadioButton
                        android:padding="10dp"
                        android:text="Lane 360"
                        android:id="@+id/RDB_360"
                        android:gravity="center"
                        android:button="@drawable/custom_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:textColor="@color/black"
                        />
                </RadioGroup>

            </LinearLayout>

        </GridLayout>
    </ScrollView>

    <TextView
        android:textSize="24dp"
        android:paddingLeft="6dp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cấu hình Widget"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="14dp"
        android:text="Hiển thị/ Ẩn Widget trên trang chủ"
        android:paddingLeft="6dp"/>
    <ScrollView
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        >
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:paddingLeft="6dp"
                    android:textColor="@color/black"
                    tools:ignore="RtlCompat"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Mặc định"
                    android:textAlignment="textStart"
                    android:textSize="16dp"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:paddingLeft="6dp"
                    android:textColor="@color/black"
                    tools:ignore="RtlCompat"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Công việc đang thực hiện"
                    android:textAlignment="textStart"
                    android:textSize="16dp"
                     />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:paddingLeft="6dp"
                    android:textColor="@color/black"
                    tools:ignore="RtlCompat"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Kiểm soát công việc"
                    android:textAlignment="textStart"
                    android:textSize="16dp"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:paddingLeft="6dp"
                    android:textColor="@color/black"
                    tools:ignore="RtlCompat"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Chức năng"
                    android:textAlignment="textStart"
                    android:textSize="16dp"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

        </GridLayout>
    </ScrollView>


    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:textSize="24dp"
            android:paddingLeft="6dp"
            android:paddingRight="12dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cấu hình chức năng"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginTop="12dp"
            android:textSize="24dp"
            android:paddingLeft="6dp"
            android:paddingRight="12dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cấu hình Dashboard"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>